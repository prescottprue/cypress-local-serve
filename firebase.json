{
  "hosting": [
    {
      "target": "app",
      "public": "build",
      "ignore": [
        "**/node_modules/**",
        "src",
        "scripts"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 3000
    }
  }
}
